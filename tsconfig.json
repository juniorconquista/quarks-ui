{
    "compilerOptions": {
        "target": "es6",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "node",
        "jsx": "react",
        "outDir": "lib",
        "rootDir": "src",
        "baseUrl": "src",
        "paths": {
            "@/*": [
                "*"
            ]
        },
        "allowJs": true,
        "resolveJsonModule": true
    },
    "include": [
        "src"
    ],
    "exclude": [
        "src/**/__tests__",
        "src/gatsby-theme-docz"
    ]
}
