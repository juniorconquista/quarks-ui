{
    "compilerOptions": {
        "target": "es6",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "node",
        "jsx": "react",
        "outDir": "lib",
        "rootDir": ".",
        "baseUrl": ".",
        "paths": {
            "quarks/*": ["./packages/quarks/*"],
            "docs/*": ["./packages/docs/*"]
          },
        "allowJs": true,
        "resolveJsonModule": true
    },
    "include": [
        "."
    ],
    "exclude": [
        "src/**/__tests__",
        "src/gatsby-theme-docz"
    ]
}
